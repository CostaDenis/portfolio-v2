<div class="relative group">

    <img class="h-10 sm:h-12 md:h-14 lg:h-16 w-auto" src="@StackPath" alt="@StackName">

    <div class="absolute top-full left-1/2 transform -translate-x-1/2 mt-2 px-3 py-2 text-xs font-medium
         text-(--TextColor) whitespace-nowrap bg-(--Span) rounded-md 
         border-[0.25px] border-(--ColorBorder) opacity-0 group-hover:opacity-100 transition-opacity
         duration-300 pointer-events-none z-10">
        @StackName

        <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 w-0 h-0
         border-l-4 border-b-4 border-r-4 border-l-transparent border-r-transparent border-b-(--Span) z-10">
        </div>
    </div>

</div>

@code {

    [Parameter]
    [EditorRequired]
    public string StackPath { get; set; }

    [Parameter]
    [EditorRequired]
    public string StackName { get; set; }
}