<div class="max-h-full h-120 md:h-128 group flex flex-col bg-(--CardColor) w-auto rounded-md justify-center items-center
    mb-4 sm:mb-6 md:mb-8 lg:mb-10 py-2 sm:py-4 md:py-6 px-2 sm:px-4 md:px-6
     transition-transform duration-500 hover:scale-105">

    <h2 class="text-base sm:text-lg md:text-xl lg:text-2xl text-(--ColorSecundary) font-bold mb-1 sm:mb-2">
        @ProjectName
    </h2>
    <img class="max-w-full max-h-full w-auto h-60 mb-2 object-contain" src="@ProjectPath" alt="@ProjectName" />

    <div class="grid grid-cols-@Techs.Count gap-2 sm:gap-4 md:gap-6 lg:gap-8 mb-2 mt-2 justify-items-center">
        @foreach (var tech in Techs)
        {
            <img class="w-auto h-8" src="@TechMap.Icon(tech)" alt="@tech.ToString()" />
        }
    </div>

    <h3 class="text-sm sm:text-base md:text-lg lg:text-xl text-(--TextColor) text-pretty mb-2 sm:mb-4">
        @ProjectDescription
    </h3>

    <div class="flex flex-col xl:flex-row justify-center items-center gap-2 mt-2">

        <GithubButton ProjectUrl="@ProjectUrl" />

        @if (!string.IsNullOrEmpty(DeployUrl))
        {
            <DeployButton DeployUrl="@DeployUrl" />
        }

    </div>

    <div class="absolute bottom-0 left-0 h-1 bg-(--ColorSecundary) w-0 group-hover:w-full transition-all duration-500">
    </div>

</div>

@code {

    [Parameter]
    [EditorRequired]
    public string ProjectName { get; set; }

    [Parameter]
    [EditorRequired]
    public string ProjectPath { get; set; }

    [Parameter]
    [EditorRequired]
    public List<ETech> Techs { get; set; } = new List<ETech>();

    [Parameter]
    [EditorRequired]
    public string ProjectDescription { get; set; }

    [Parameter]
    [EditorRequired]
    public string ProjectUrl { get; set; }

    [Parameter]
    public string? DeployUrl { get; set; }
}