<div class="flex flex-row ml-2 sm:ml-4 md:ml-6 gap-1">

    <h3 class="text-(--KeyColor)">
        "@Contact.Name":
    </h3>

    @if (@Contact.Url is not null)
    {
        <a href="@Contact.Url" target="_blank" rel="noopener noreferrer">
            <h3 class="ml-1 text-(--ValueColor) underline" )>
                "@Contact.Value"
            </h3>
        </a>
    }
    else
    {
        <h3 class="ml-1 text-(--ValueColor)" )>
            "@Contact.Value"
        </h3>
    }

</div>

@code {

    [Parameter]
    [EditorRequired]
    public ContactDTO Contact { get; set; }

}