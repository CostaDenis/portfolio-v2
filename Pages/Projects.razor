    private List<ETech> SimplifiedPicpayTechs = new List<ETech>
{
ETech.DotNet,
ETech.CSharp,
ETech.EntityFramework,
ETech.PostgreSQL,
ETech.Docker
};

    private List<ETech> ClasspionsLeagueTechs = new List<ETech>
{
ETech.DotNet,
ETech.CSharp,
ETech.SQL,
ETech.Docker
};

    private List<ETech> TrackMyAssetsTechs = new List<ETech>
{
ETech.DotNet,
ETech.CSharp,
ETech.SQL,
ETech.Docker,
ETech.Azure
};

    private List<ETech> HardwareStoreTechs = new List<ETech>
{
ETech.DotNet,
ETech.CSharp,
ETech.SQLite
};

    private List<ETech> CalculadoraImcTechs = new List<ETech>
{
ETech.DotNet,
ETech.CSharp,
ETech.Blazor,
ETech.HTML,
ETech.CSS,
