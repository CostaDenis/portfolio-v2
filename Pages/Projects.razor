@page "/projects"

<body>

    <div class="flex sm:flex justify-center sm:justify-start items-center sm:items-start
    mt-2 sm:mt-4">

        <h2 class="font-sans text-4xl md:text-5xl lg:text-6xl text-(--ColorSecundary) block">
            Foco profissional
        </h2>

    </div>

    <div class="flex sm:flex justify-center sm:justify-start items-center sm:items-start
    mt-4 sm:mt-8">

        <h3 class="font-sans text-3xl md:text-4xl lg:text-5xl text-(--ColorSecundary) block">
            Stack Principal
        </h3>
    </div>

    <MainBoard />

    <div class="flex sm:flex justify-center sm:justify-start items-center sm:items-start
    mt-12 sm:mt-14 md:mt-16">

        <h3 class="font-sans text-3xl md:text-4xl lg:text-5xl text-(--ColorSecundary) block">
            Principais projetos
        </h3>
    </div>

    <div
        class="w-full h-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 justify-items-center mb-20 sm:mb-6 md:mb-0">

        <div class="relative w-auto max-w-[80%] mt-6 sm:mt-8">

            <ProjectCard ProjectName="simplified-picpay" ProjectPath="imgs/Projects/simplified_picpay.svg"
                Techs="@SimplifiedPicpayTechs"
                ProjectDescription="API baseada no desafio técnico do PicPay, aprimorada e ampliada."
                ProjectUrl="https://github.com/CostaDenis/simplified-picpay"
                DeployUrl="https://simplified-picpay.onrender.com" />

            <ProjectCard ProjectName="Classpions League" ProjectPath="imgs/Projects/classpionsleague.svg"
                Techs="@ClasspionsLeagueTechs" ProjectDescription="Aplicação via console que utiliza o Dapper para gerenciar dados baseados no Campeonato Espanhol
                    de Futebol." ProjectUrl="https://github.com/CostaDenis/ClasspionsLeague" />

            <ProjectCard ProjectName="TrackMyAssets_API" ProjectPath="imgs/Projects/TrackMyAssets.svg"
                Techs="@TrackMyAssetsTechs"
                ProjectDescription="API Rest para gerenciar e registrar movimentações de ativos."
                ProjectUrl="https://github.com/CostaDenis/TrackMyAssets_API" />

            <ProjectCard ProjectName="Hardware Store" ProjectPath="imgs/Projects/HardwareStore.svg"
                Techs="@HardwareStoreTechs" ProjectDescription="Sistema desenvolvido em Windows Forms para o gerenciamento de vendas e estoque desenvolvido para
                    lojas de informática." ProjectUrl="https://github.com/CostaDenis/Hardware-Store" />

            <ProjectCard ProjectName="calculadora-imc" ProjectPath="imgs/Projects/calculadora-imc.svg"
                Techs="@CalculadoraImcTechs"
                ProjectDescription="Apicação Blazor WebAssembly desenvolvida para o cálculo do IMC."
                ProjectUrl="https://github.com/CostaDenis/calculadora-imc"
                DeployUrl="https://costadenis.github.io/calculadora-imc/" />

        </div>

    </div>

</body>

